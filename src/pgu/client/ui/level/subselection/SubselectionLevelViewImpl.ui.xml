<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='res' type='pgu.client.ui.style.PguGameResources' />

    <ui:style>
        .footer {
            position: absolute;
            bottom: 0px;
            right: 0px;
            width: 100%;
            height: 50px;
        }
        .btn-ok {
            float: right;
        }
    </ui:style>
    
    <g:HTMLPanel ui:field="container" addStyleNames="{res.style.container}">
    
        <g:HTMLPanel ui:field="subselectionsPanel">
        </g:HTMLPanel>
        
        <g:HTMLPanel addStyleNames="{style.footer}">
            <g:Button ui:field="btnOk" addStyleNames="{style.btn-ok}">OK</g:Button> 
        </g:HTMLPanel>
    
    </g:HTMLPanel>
    
</ui:UiBinder> 