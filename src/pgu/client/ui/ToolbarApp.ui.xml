<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .button-app {
            background: white;
            border-radius: 3px;
            border: 1px solid #C3C3C3;
            border-bottom-color: #999;
            cursor: pointer;
            display: block;
            font-weight: bold;
            margin-top: 1px;
            padding: 6px;
            color: #444;
        }
        .clear {
            clear: both;
        }
        .help {
            max-width: 30px;
            margin-left: 10px;
            float: left;
        }
        .start {
            max-width: 30px;
            float: left;
        }
        .login {
            max-width: 250px;
            float: left;
        }
        .level {
            max-width: 200px;
        }
        .toolbarApp {
            padding: 0px;
            margin: 0px;
            background-color: #F0F0F0;            
            
            min-height: 20px;
            height: 20px;
            
            float: left;
        }
    </ui:style>
    
    <g:HTMLPanel ui:field="toolbarApp" styleName="{style.toolbarApp}">
        <g:HTML ui:field="help" addStyleNames="{style.button-app} {style.help}" />
        <g:HTML ui:field="start" addStyleNames="{style.button-app} {style.start}" />
        <g:HTML ui:field="login" addStyleNames="{style.button-app} {style.login}" />
        <g:HTML styleName="{style.clear}" />
        <g:HTML ui:field="level" styleName="{style.level}" />
    </g:HTMLPanel>
    
</ui:UiBinder> 