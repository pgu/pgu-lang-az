<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style type='pgu.client.ui.welcome.level.LevelPanel.LevelPanelStyle'>
    .cell {
        color: white;
        overflow: hidden;
        float: left;
        cursor: pointer;
        margin-top: 2px;
        margin-left: 2px;
        text-align: center;
        -webkit-box-shadow: inset #22afca 0 0 20px;
    }
    .cellSelected {
        background : blue;
    }
    .detail {
        float: left;
    }
    .separator {
        float: left;
    }
    .overview {
        position: absolute;
        top: 0px;
        left: 0px;
        overflow: hidden;
        height: 20px;
        border-bottom: 1px solid white;
    }
    .container {
        position: relative;
        background-color: black;
        color: white;
    }
    .controls {
        border-top: 1px solid white;
        position: absolute;
        bottom: 0px;
        left: 0px;        
        overflow: hidden;
        height: 20px;
    }
    .btn-control {
        width: 50px;
    }
    .selection {
        position: absolute;
        top: 21px;
        left: 0px;
    }
    .overview-label {
        float: left;
        margin-right: 5px;
    }
    .overview-value {
        float: left;
        margin-right: 5px;
        font-weight: bold;
    }
    </ui:style>
    
    <g:HTMLPanel ui:field="container" addStyleNames="{style.container}">
        <g:HTMLPanel ui:field="overview" addStyleNames="{style.overview}">
            <g:HTML addStyleNames="{style.overview-label}">Language</g:HTML>
            <g:HTML ui:field="ovLanguage" addStyleNames="{style.overview-value}"></g:HTML>
            <g:HTML addStyleNames="{style.overview-label}">Granularity</g:HTML>
            <g:HTML ui:field="ovGranularity" addStyleNames="{style.overview-value}"></g:HTML>
            <g:HTML addStyleNames="{style.overview-label}">Theme</g:HTML>
            <g:HTML ui:field="ovTheme" addStyleNames="{style.overview-value}"></g:HTML>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="language" addStyleNames="{style.selection}">
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="granularity" addStyleNames="{style.selection}">
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="theme" addStyleNames="{style.selection}">
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="subselection" addStyleNames="{style.selection}">
        </g:HTMLPanel>
        <g:HorizontalPanel ui:field="controls" addStyleNames="{style.controls}">
            <g:Button ui:field="btnCancel" addStyleNames="{style.btn-control}">Cancel</g:Button>
            <g:Button ui:field="btnBack" addStyleNames="{style.btn-control}">Back</g:Button>
            <g:Button ui:field="btnOk" addStyleNames="{style.btn-control}">Ok</g:Button>
        </g:HorizontalPanel>
    </g:HTMLPanel>
    
</ui:UiBinder> 