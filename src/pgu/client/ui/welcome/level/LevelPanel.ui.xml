<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style type='pgu.client.ui.welcome.level.LevelPanel.LevelPanelStyle'>
    .cell {
        color: white;
        background : grey;
        overflow: hidden;
        float: left;
        cursor: pointer;
        margin-top: 2px;
        margin-left: 2px;
        text-align: center;
    }
    .detail {
        float: left;
    }
    .separator {
        float: left;
    }
    .overview {
        position: absolute;
        top: 0px;
        left: 0px;
        overflow: hidden;
        height: 20px;
        border-bottom: 1px solid white;
    }
    .container {
        position: relative;
        background-color: black;
        color: white;
    }
    .controls {
        border-top: 1px solid white;
        position: absolute;
        bottom: 0px;
        left: 0px;        
        overflow: hidden;
        height: 20px;
    }
    .btn-control {
        width: 50px;
    }
    .selection {
        position: absolute;
        top: 21px;
        left: 0px;
    }
    </ui:style>
    
    <g:HTMLPanel ui:field="container" addStyleNames="{style.container}">
        <g:HTMLPanel ui:field="overview" addStyleNames="{style.overview}">
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="language" addStyleNames="{style.selection}">
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="type" addStyleNames="{style.selection}">
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="theme" addStyleNames="{style.selection}">
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="subselection" addStyleNames="{style.selection}">
        </g:HTMLPanel>
        <g:HorizontalPanel ui:field="controls" addStyleNames="{style.controls}">
            <g:Button ui:field="btnCancel" addStyleNames="{style.btn-control}">Cancel</g:Button>
            <g:Button ui:field="btnBack" addStyleNames="{style.btn-control}">Back</g:Button>
            <g:Button ui:field="btnOk" addStyleNames="{style.btn-control}">Ok</g:Button>
        </g:HorizontalPanel>
    </g:HTMLPanel>
    
</ui:UiBinder> 