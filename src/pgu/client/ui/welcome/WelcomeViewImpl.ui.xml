<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:pgu="urn:import:pgu.client.ui.utils">
    <ui:style>
        .menu-area {
            height: 100px;
    
            padding: 0px;
            margin: 0px;
            
            display: table;
        }
        .cell-logo {
            overflow: hidden;
            position: relative;
            width: 20px;
        }
        .logo {
            position: absolute;
            top: 0px;
            left: 0px;
            padding-left: 5px;
            
            color: white;
            text-shadow: 0 0 10px white;
            line-height: 1;

            font-size: 3.5em;
            text-align: center;
        }
        .container {
            position: relative;
            margin-top: 20px;
        }
        .menu-area-row {
            display: table-row;
        }
        .menu-area-cell {
            display: table-cell;
            padding-left: 30px;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.container}">
    
        <!-- menu area -->
        <g:HTMLPanel ui:field="menuArea" styleName="{style.menu-area}">    
            <g:HTMLPanel addStyleNames="{style.menu-area-row}">
            
                <g:HTMLPanel addStyleNames="{style.menu-area-cell} {style.cell-logo}">
                    <g:HTML ui:field="logo" addStyleNames="{style.logo}" >
                        &#945;<br/>&#x3042;
                    </g:HTML>
                </g:HTMLPanel>
                <g:HTMLPanel addStyleNames="{style.menu-area-cell}">
                    <pgu:AppCell ui:field="loginTest" />
                </g:HTMLPanel>
                <g:HTMLPanel addStyleNames="{style.menu-area-cell}">
                    <pgu:AppCell ui:field="levelTest" />
                </g:HTMLPanel>
                <g:HTMLPanel addStyleNames="{style.menu-area-cell}">
                    <pgu:AppCell ui:field="startTest" />
                </g:HTMLPanel>
                
            </g:HTMLPanel>
        </g:HTMLPanel>
        
        <!-- list area -->
        
    </g:HTMLPanel>
    
</ui:UiBinder> 