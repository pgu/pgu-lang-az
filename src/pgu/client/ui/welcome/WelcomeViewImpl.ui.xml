<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:pgu="urn:import:pgu.client.ui.utils">
    <ui:style>
        .menu-area {
            height: 100px;
    
            padding: 0px;
            margin: 0px;
            
        }
        .cell-logo {
            overflow: hidden;
            position: relative;
            width: 20px;
        }
        .logo {
            position: absolute;
            top: 0px;
            left: 0px;
            padding-left: 5px;
            
            color: white;
            text-shadow: 0 0 10px white;
            line-height: 1;

            font-size: 3.5em;
            text-align: center;
        }
        .container {
            position: relative;
            margin-top: 20px;
        }
        .menu-area-row {
        }
        .menu-area-cell {
            padding-left: 30px;
        }
        .btn {
            margin: 100px auto;
            line-height: 2;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.container}">
    
        <!-- menu area -->
        <g:HTMLPanel ui:field="menuArea" styleName="{style.menu-area}">    
            <g:HTMLPanel addStyleNames="{style.menu-area-row}">
            
                <g:HTMLPanel addStyleNames="{style.menu-area-cell}">
                    <pgu:AppCell ui:field="levelBtn" addStyleNames="{style.btn}" />
                </g:HTMLPanel>
                
            </g:HTMLPanel>
<!--             <g:HTMLPanel addStyleNames="{style.menu-area-row}"> -->
            
<!--                 <g:HTMLPanel ui:field="currentLevelPanel"> -->
<!--                 </g:HTMLPanel> -->
            
<!--             </g:HTMLPanel> -->
            <g:HTMLPanel addStyleNames="{style.menu-area-row}">
            
                <g:HTMLPanel addStyleNames="{style.menu-area-cell}">
                    <pgu:AppCell ui:field="startBtn" addStyleNames="{style.btn}" />
                </g:HTMLPanel>
            
            </g:HTMLPanel>
        </g:HTMLPanel>
        
