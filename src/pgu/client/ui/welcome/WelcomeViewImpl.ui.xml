<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .toolbarApp {
            overflow: hidden;
            position: relative; 
            -webkit-transition: height 85ms ease-in;
            background-color: #F0F0F0;
            /*
            height: 50px;
            margin: 2px;
            padding: 10px;
            */
        }

        .header-btn {
            float: left;
            position: relative;
            margin-top: 2px;
            margin-left: 1px;
            margin-right: 1px;
            background: white;
            border-radius: 3px;
            -webkit-border-radius: 3px;
            border: 1px solid #C3C3C3;
            border-bottom-color: #999;
            cursor: pointer;
            display: block;
            font-weight: bold;
            color: #444;
        }
        .header-btn:active {
            background-color: #34B238; /* #3468B2 */
            border-color: #174F1B; /* #172E4F */
            box-shadow: inset 0 4px 8px rgba(0,0,0,0.25);
            -webkit-box-shadow: inset 0 4px 8px rgba(0,0,0,0.25);
            color: white;
        }
        .header-btn:hover {
            background-color: #53C65B; /* #5383C6 */ 
            border-color: #2D8630;  /* #2D5286 */
            color: white;
            text-shadow: 0 1px rgba(0,0,0,0.4);
        }

        /* ************************************** */    
        .menuArea {
            padding: 0px;
            margin: 0px;
            background-color: #FFA8A8;
            
            position: absolute;
            top: 0px;
            left: 0px;
        }
        
        .listArea {
            padding: 0px;
            margin: 0px;
            background-color: #C3C3C3;
            
            position: absolute;
            top: 50px;
            left: 0px;
            
            overflow: auto;
        }
        /* ************************************** */    
        
        .logo {
            float: left;
            background-color: #D91BE0;
            overflow: hidden;
            
            margin-top: 2px;
            margin-left: 1px;
            margin-right: 1px;
            border-radius: 3px;
            -webkit-border-radius: 3px;
            border: 1px solid #C3C3C3;
            border-bottom-color: #999;
            
        }
        
        /* ************************************** */    
        .start {
            float: left;
            position: relative;
            width: 100%;
            height: 100%;
            
            
            background: white;
            border-radius: 3px;
            -webkit-border-radius: 3px;
            border: 1px solid #C3C3C3;
            border-bottom-color: #999;
            cursor: pointer;
            display: block;
            font-weight: bold;
            padding: 10px;
            color: #444;
        }
        .start:active {
            background-color: #34B238; /* #3468B2 */
            border-color: #174F1B; /* #172E4F */
            box-shadow: inset 0 4px 8px rgba(0,0,0,0.25);
            -webkit-box-shadow: inset 0 4px 8px rgba(0,0,0,0.25);
            color: white;
        }
        .start:hover {
            background-color: #53C65B; /* #5383C6 */ 
            border-color: #2D8630;  /* #2D5286 */
            color: white;
            text-shadow: 0 1px rgba(0,0,0,0.4);
        }
    
        .container {
            position: relative;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.container}">
    
        <!-- menu area -->
        <g:HTMLPanel ui:field="menuArea" styleName="{style.menuArea}">    
            <g:HTML ui:field="logo" addStyleNames="{style.logo}" />
            <g:HTML ui:field="login" addStyleNames="{style.header-btn}" />
            <g:HTML ui:field="level" styleName="{style.header-btn}" />
            <g:HTML ui:field="start" styleName="{style.header-btn}" />
        </g:HTMLPanel>
        
        <!-- list area -->
        <g:HTMLPanel ui:field="listArea" styleName="{style.listArea}">    
        </g:HTMLPanel>
        
    
    </g:HTMLPanel>
    
</ui:UiBinder> 