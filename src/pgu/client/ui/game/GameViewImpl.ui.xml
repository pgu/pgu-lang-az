<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
    .menu-area {
            padding: 0px;
            margin: 0px;
            background-color: #FFA8A8;
            
            z-index: 999;
            position: absolute;
            top: 0px;
            left: 0px;
    }
    
    .grid-area {
    }
    
    /* ************************************** */    
    .header-btn {
        float: left;
        position: relative;
        
        margin-top: 2px;
        margin-left: 1px;
        margin-right: 1px;
        
        background: white;
        
        border-radius: 3px;
        -webkit-border-radius: 3px;
        border: 1px solid #C3C3C3;
        border-bottom-color: #999;
        
        cursor: pointer;
        display: block;
        
        color: #444;
        font-weight: bold;
        font-size: 3em;
    }
    .header-btn:active {
        background-color: #34B238; /* #3468B2 */
        border-color: #174F1B; /* #172E4F */
        box-shadow: inset 0 4px 8px rgba(0,0,0,0.25);
        -webkit-box-shadow: inset 0 4px 8px rgba(0,0,0,0.25);
        color: white;
    }
    .header-btn:hover {
        background-color: #53C65B; /* #5383C6 */ 
        border-color: #2D8630;  /* #2D5286 */
        color: white;
        text-shadow: 0 1px rgba(0,0,0,0.4);
    }
    /* ************************************** */    
    
    .time {
        float: left;
        position: relative;
        
        margin-top: 2px;
        margin-left: auto;
        margin-right: auto;
        
        background: white;
        
        border-radius: 3px;
        -webkit-border-radius: 3px;
        border: 1px solid #C3C3C3;
        border-bottom-color: #999;
        
        display: block;
        
        line-height: 1;
        text-align: center;
        color: #444;
        font-weight: bold;
        font-size: 3em;
    }
    
    .menu-right {
        position: absolute;
        top: 0px;
        right: 0px;
    }
    .help {
        margin-left: 3px;
    }
    .exit {
        margin-right: 3px;
    }
    </ui:style>

    <g:HTMLPanel>
    
        <!-- menu area -->
        <g:HTMLPanel ui:field="menuArea" styleName="{style.menu-area}">    
            <g:HTML ui:field="help" addStyleNames="{style.header-btn} {style.help}" >
                <span class="btnText">HELP</span>
            </g:HTML>
            
            <g:HTML ui:field="time" addStyleNames="{style.time}" >
                <span>00:00</span>
            </g:HTML>
            
            <g:HTMLPanel ui:field="menuRight" styleName="{style.menu-right}">    
                <g:HTML ui:field="restart" addStyleNames="{style.header-btn}" >
                    <span class="btnText">RESTART</span>
                </g:HTML>
                <g:HTML ui:field="exit" addStyleNames="{style.header-btn} {style.exit}" >
                    <span class="btnText">EXIT</span>
                </g:HTML>
            </g:HTMLPanel>
        </g:HTMLPanel>
    
        <!-- grid area -->
        <g:HTMLPanel ui:field="gridArea" styleName="{style.grid-area}">    
        </g:HTMLPanel>
    
    </g:HTMLPanel>
    
</ui:UiBinder> 