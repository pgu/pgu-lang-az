<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:pgu="urn:import:pgu.client.ui.utils">    

    <ui:style>
    .menu-area {
            padding: 0px;
            margin: 0px;
            
            z-index: 999;
            position: absolute;
            top: 0px;
            left: 0px;
            
            background: #184762;
            background: -moz-linear-gradient(top, #226287 0%, #184762 100%);
            background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #226287), color-stop(100%, #184762));
            background: -webkit-linear-gradient(top, #226287 0%, #184762 100%);
            background: -o-linear-gradient(top, #226287 0%, #184762 100%);
            background: -ms-linear-gradient(top, #226287 0%, #184762 100%);
            background: linear-gradient(top, #226287 0%, #184762 100%);
            
            border-bottom: 1px solid white;
            -webkit-box-shadow: 0 0 10px white;
    }
    
    .grid-area {
            margin-top: 50px;
    
            /* padding: 0px; */
            /* margin: 0px; */
            
            /* position: absolute; */
            /* top: 50px; */
            /* left: 0px; */
    }
    .page {
            position: absolute;
            top: 0px;
            bottom: 0px;
            left: 0px;
            right: 0px;
    
            background: literal("-webkit-linear-gradient(top, #0f394f 0%, #000 100%)");
            background: #0f394f; /* Old browsers */
            background: literal("-moz-linear-gradient(top, #0f394f 0%, #000 100%)"); /* FF3.6+ */
            background: literal("-webkit-gradient(linear, left top, left bottom, color-stop(0%,#0f394f), color-stop(100%,#000))"); /* Chrome,Safari4+ */
            background: literal("-o-linear-gradient(top, #0f394f 0%,#000 100%)"); /* Opera 11.10+ */
            background: literal("-ms-linear-gradient(top, #0f394f 0%,#000 100%)"); /* IE10+ */
            background: literal("linear-gradient(top, #0f394f 0%,#000 100%)"); /* W3C */
            filter: literal("progid:DXImageTransform.Microsoft.gradient( startColorstr='#0f394f', endColorstr='#000',GradientType=0 )"); /* IE6-9 */    
    }
    
    /* ************************************** */    
    .header-btn {
        float: left;
        position: relative;
        
        margin-left: 2px;
        margin-right: 6px;
        
        border-radius: 6px;
        -moz-border-radius: 6px;
        -webkit-border-radius: 6px;
        
        cursor: pointer;
        display: block;
        
        color: #e3e3e3;
        font-weight: bold;
        font-size: 3em;
        text-shadow: 0 1px rgba(0,0,0,0.4);
        
        background: #256A93;
        background: -moz-linear-gradient(top, #2A79A7 0%, #256A93 100%);
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #2A79A7), color-stop(100%, #256A93));
        background: -webkit-linear-gradient(top, #2A79A7 0%, #256A93 100%);
        background: -o-linear-gradient(top, #2A79A7 0%, #256A93 100%);
        background: -ms-linear-gradient(top, #2A79A7 0%, #256A93 100%);
        background: linear-gradient(top, #2A79A7 0%, #256A93 100%);
        box-shadow:inset 0 1px 0 rgba(255, 255, 255, 0.15), 0 1px 1px rgba(0, 0, 0, 0.25);
        -moz-box-shadow:inset 0 1px 0 rgba(255, 255, 255, 0.15), 0 1px 1px rgba(0, 0, 0, 0.25);
        -ms-box-shadow:inset 0 1px 0 rgba(255, 255, 255, 0.15), 0 1px 1px rgba(0, 0, 0, 0.25);
        -o-box-shadow:inset 0 1px 0 rgba(255, 255, 255, 0.15), 0 1px 1px rgba(0, 0, 0, 0.25);
        -webkit-box-shadow:inset 0 1px 0 rgba(255, 255, 255, 0.15), 0 1px 1px rgba(0, 0, 0, 0.25);
    }
    .header-btn:active {
        color: white;
        background: #256A93;
        background: -moz-linear-gradient(top, #2A79A7 0%, #256A93 100%);
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #2A79A7), color-stop(100%, #256A93));
        background: -webkit-linear-gradient(top, #2A79A7 0%, #256A93 100%);
        background: -o-linear-gradient(top, #2A79A7 0%, #256A93 100%);
        background: -ms-linear-gradient(top, #2A79A7 0%, #256A93 100%);
        background: linear-gradient(top, #2A79A7 0%, #256A93 100%);
    }
    .header-btn:hover {
        background:#2c7faf;
        background:-moz-linear-gradient(top, #318ec4 0%, #2c7faf 100%);
        background:-webkit-gradient(linear, left top, left bottom, color-stop(0%, #318ec4), color-stop(100%, #2c7faf));
        background:-webkit-linear-gradient(top, #318ec4 0%, #2c7faf 100%);
        background:-o-linear-gradient(top, #318ec4 0%, #2c7faf 100%);
        background:-ms-linear-gradient(top, #318ec4 0%, #2c7faf 100%);
        background:linear-gradient(top, #318ec4 0%, #2c7faf 100%);
    }
    /* ************************************** */    
    
    .time {
        float: left;
        position: relative;
        
        margin-top: 7px;
        margin-left: auto;
        margin-right: auto;
        
        display: block;
        
        line-height: 1;
        text-align: center;
        color: #e3e3e3;
        font-weight: bold;
        font-size: 3em;
    }
    
    .menu-right {
        position: absolute;
        top: 0px;
        right: 0px;
    }
    .btn-text {
        line-height: 1;
        text-align: center;
    }
    .btn {
        margin: 100px auto;
    }
    
    </ui:style>

    <g:HTMLPanel addStyleNames="{style.page}">
    
