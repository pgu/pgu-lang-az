<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
    .cell {
        float: left;
        
        background: white;
        
        border-radius: 3px;
        -webkit-border-radius: 3px;
        border: 1px solid #C3C3C3;
        border-bottom-color: #999;
        
        cursor: pointer;
        
        color: black;
    }
    .cell:active {
        background-color: #34B238; /* #3468B2 */
        border-color: #174F1B; /* #172E4F */
        box-shadow: inset 0 4px 8px rgba(0,0,0,0.25);
        -webkit-box-shadow: inset 0 4px 8px rgba(0,0,0,0.25);
        color: white;
    }
    .cell:hover {
        background-color: #53C65B; /* #5383C6 */ 
        border-color: #2D8630;  /* #2D5286 */
        color: white;
        text-shadow: 0 1px rgba(0,0,0,0.4);
    }
    
    </ui:style>
    
    <g:HTMLPanel ui:field="cell" addStyleNames="{style.cell}">
        <g:HTML ui:field="cellText" />
    </g:HTMLPanel>
    
</ui:UiBinder> 